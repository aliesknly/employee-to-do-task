{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/next-ui": ["libs/next-ui/src/index.ts"],
      "@libs/next-ui/common": ["libs/next-ui/src/common/index.ts"],
      "@libs/next-ui/components": ["libs/next-ui/src/components/index.ts"],
      "@libs/next-ui/server": ["libs/next-ui/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
